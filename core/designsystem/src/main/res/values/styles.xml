<resources>

    <style name="link_text_style">
        <item name="android:textSize">16sp</item>
        <!-- TODO Use light theme text color if dark mode is not supported
                  May be different from black
        -->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorLink">@color/primary_blue</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    <style name="link_text_style_black">
        <item name="android:textSize">16sp</item>
        <!-- TODO Use light theme text color if dark mode is not supported
                  May be different from black
        -->
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorLink">@android:color/black</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
</resources>